{
    "exposes": [
        {
            "address": "$fruaddress",
            "bus": "$bus",
            "name": "Front Panel FRU",
            "type": "IntelFruDevice"
        },
        {
            "address": "0x4D",
            "bus": "$bus",
            "name": "Front Panel Temp",
            "thresholds": [
                [
                    {
                        "direction": "greater than",
                        "name": "upper critical",
                        "severity": 1,
                        "value": 55
                    },
                    {
                        "direction": "greater than",
                        "name": "upper non critical",
                        "severity": 0,
                        "value": 50
                    },
                    {
                        "direction": "less than",
                        "name": "lower non critical",
                        "severity": 0,
                        "value": 5
                    },
                    {
                        "direction": "less than",
                        "name": "lower critical",
                        "severity": 1,
                        "value": 0
                    }
                ]
            ],
            "type": "TMP75"
        }
    ],
    "name": "Intel Front Panel",
    "probe": "fru.probe({'BOARD_PRODUCT_NAME': 'FFPANEL'}) + fru.probe({'BOARD_PRODUCT_NAME': 'F2USTOPANEL'})"
}